OBJS = parser.cmo scanner.cmo printer.cmo interpret.cmo backend.cmo microc.cmo

CFLAGS="-m32"

TESTS = \
arith1 \
arith2 \
fib \
for1 \
func1 \
gcd \
hello \
if1 \
if2 \
if3 \
if4 \
ops1 \
var1 \
while1

TARFILES = Makefile testall.sh scanner.mll parser.mly \
	ast.mli interpret.ml printer.ml microc.ml \
	$(TESTS:%=tests/test-%.mc) \
	$(TESTS:%=tests/test-%.out)

microc : $(OBJS) lib.o
	ocamlc -o microc $(OBJS)

.PHONY : test
test : main.c lib.c
	./microc < main.c > main.s
	gcc -m32 -c main.s -o main.o
	gcc -m32 -c lib.c -o lib.o
	gcc -m32 lib.o main.o -o test
	./test

scanner.ml : scanner.mll
	ocamllex scanner.mll

parser.ml parser.mli : parser.mly
	ocamlyacc parser.mly

%.cmo : %.ml
	ocamlc -c $<

%.cmi : %.mli
	ocamlc -c $<

microc.tar.gz : $(TARFILES)
	cd .. && tar czf microc/microc.tar.gz $(TARFILES:%=microc/%)

.PHONY : clean
clean :
	rm -f microc parser.ml parser.mli scanner.ml testall.log *.cmo *.cmi *.o *.s test temp.exe

# Generated by ocamldep *.ml *.mli
backend.cmo: ast.cmi 
backend.cmx: ast.cmi 
interpret.cmo: ast.cmi 
interpret.cmx: ast.cmi 
microc.cmo: scanner.cmo printer.cmo parser.cmi interpret.cmo backend.cmo 
microc.cmx: scanner.cmx printer.cmx parser.cmx interpret.cmx backend.cmx 
parser.cmo: ast.cmi parser.cmi 
parser.cmx: ast.cmi parser.cmi 
printer.cmo: ast.cmi 
printer.cmx: ast.cmi 
scanner.cmo: parser.cmi 
scanner.cmx: parser.cmx 
parser.cmi: ast.cmi 
