OBJS = parser.cmo scanner.cmo printer.cmo backend.cmo sast.cmo microc.cmo

CFLAGS="-m32"

microc : $(OBJS) lib.o
	ocamlc -o microc $(OBJS)

.PHONY : test
test : microc test/compiler-tester.py test/test-cflat2.txt
	test/compiler-tester.py test/test-cflat2.txt

scanner.ml : scanner.mll
	ocamllex scanner.mll

parser.ml parser.mli : parser.mly
	ocamlyacc parser.mly

%.cmo : %.ml
	ocamlc -c $<

%.cmi : %.mli
	ocamlc -c $<

.PHONY : clean
clean :
	rm -f microc parser.ml parser.mli scanner.ml testall.log *.cmo *.cmi *.o *.s temp.exe

# Generated by ocamldep *.ml *.mli
backend.cmo: ast.cmi
backend.cmx: ast.cmi
microc.cmo: scanner.cmo sast.cmo printer.cmo parser.cmi backend.cmo
microc.cmx: scanner.cmx sast.cmx printer.cmx parser.cmx backend.cmx
parser.cmo: ast.cmi parser.cmi
parser.cmx: ast.cmi parser.cmi
printer.cmo: ast.cmi
printer.cmx: ast.cmi
sast.cmo: ast.cmi
sast.cmx: ast.cmi
scanner.cmo: parser.cmi
scanner.cmx: parser.cmx
parser.cmi: ast.cmi
